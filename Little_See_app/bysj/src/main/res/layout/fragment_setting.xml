<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_fafafa"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEBUG"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:id="@+id/textview_seeting_titiledebug"
                android:textColor="@color/_000000"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_seeting_titiledebug"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="DEBUG"
                    android:textSize="20dp"
                    android:id="@+id/textview_serting_debug"
                    android:textColor="@color/_000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_serting_debug"
                    android:text="用于开发过程中手动调试服务器地址"
                    android:paddingTop="2dp"
                    android:id="@+id/textview_seeting_debuginfo"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_e7e7e7"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textview_seeting_debuginfo"
                    />
            </RelativeLayout>



            F6F6F6



        </RelativeLayout>
    </ScrollView>

</LinearLayout>