<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_fafafa"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEBUG"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:id="@+id/textview_seeting_titiledebug"
                android:textColor="@color/_000000"
                android:layout_marginTop="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_seeting_titiledebug"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/rela_seeting_item1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="DEBUG"
                    android:textSize="20dp"
                    android:id="@+id/textview_setting_debug"
                    android:textColor="@color/_000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_setting_debug"
                    android:text="用于开发过程中手动调试服务器地址"
                    android:paddingTop="2dp"
                    android:id="@+id/textview_seeting_debuginfo"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_e7e7e7"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textview_seeting_debuginfo"
                    />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="基本设置"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:id="@+id/textview_seeting_titilebase"
                android:textColor="@color/_000000"
                android:layout_below="@+id/rela_seeting_item1"
                android:layout_marginTop="20dp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_seeting_titilebase"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/rela_seeting_item2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="清除缓存"
                    android:textSize="20dp"
                    android:id="@+id/textview_setting_cache"
                    android:textColor="@color/_000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_setting_cache"
                    android:text="缓存什么的"
                    android:paddingTop="2dp"
                    android:id="@+id/textview_seeting_cacheinfo"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_e7e7e7"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textview_seeting_cacheinfo"
                    />
            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="话题"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:id="@+id/textview_seeting_titileclass"
                android:textColor="@color/_000000"
                android:layout_below="@+id/rela_seeting_item2"
                android:layout_marginTop="20dp"
                />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_seeting_titileclass"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/rela_seeting_class_diary"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="优选"
                    android:textSize="20dp"
                    android:id="@+id/textview_setting_class_diary"
                    android:textColor="@color/_000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_e7e7e7"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textview_setting_class_diary"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rela_seeting_class_diary"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/rela_seeting_class_news"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="即刻"
                    android:textSize="20dp"
                    android:id="@+id/textview_setting_class_news"
                    android:textColor="@color/_000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_e7e7e7"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textview_setting_class_news"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rela_seeting_class_news"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/rela_seeting_class_image"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="佳景"
                    android:textSize="20dp"
                    android:id="@+id/textview_setting_class_image"
                    android:textColor="@color/_000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_e7e7e7"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textview_setting_class_image"
                    />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关于与帮助"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:id="@+id/textview_seeting_titilabout"
                android:textColor="@color/_000000"
                android:layout_below="@+id/rela_seeting_class_image"
                android:layout_marginTop="20dp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_seeting_titilabout"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/rela_seeting_class_about"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="关于我"
                    android:textSize="20dp"
                    android:id="@+id/textview_setting_aboutme"
                    android:textColor="@color/_000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_e7e7e7"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textview_setting_aboutme"
                    />
            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>

</LinearLayout>